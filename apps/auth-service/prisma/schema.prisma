generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client/auth-service"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") // Database table ka naam lowercase 'users' hoga
}

enum Role {
  USER
  ADMIN
  VENDOR
}